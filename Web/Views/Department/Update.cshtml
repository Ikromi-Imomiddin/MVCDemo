@model Domain.Dtos.UpdateDepartmentDto

<form method="post" asp-action="Update">
    <div class="form-group">
        <input type="hidden" asp-for="Id">
        <label>Department Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter department name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  <div class="form-group">
        <label>Department Description</label>
      <textarea asp-for="Description" class="form-control"  placeholder="Enter department desctiption"></textarea>
       <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
</form>